<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dylag.piotr.e_kartawzorowmatematycznych.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textview"
            android:text="Witaj maturzysto w swojej E-Karcie Wybranych Wzorów Matematycznych"
            android:textStyle="normal|bold|italic"
            android:textSize="18sp"
            android:textColor="@color/colorAccent" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnWartBezw"
            android:text="Wartosc Bezwzgledna Liczby"
            android:onClick="WartoscBezwzgledna"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnPotPier"
            android:text="Potęgi i Pierwiatki"
            android:onClick="PotegiPierwiastki"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnLog"
            android:text="Logarytmy"
            android:onClick="logarytmy"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnSilDwu"
            android:text="Silnia, Wspólczynnik dwumianowy"
            android:onClick="SilniaDwumian"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnDwuNew"
            android:text="Wzór Dwumianowy Newtona"
            android:onClick="DwumianNew"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnWzSkrMno"
            android:text="Wzory Skróconego Mnozenia"
            android:onClick="WzorySkrMnoz"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnCiagi"
            android:text="Ciagi"
            android:onClick="ciagi"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnFunKwad"
            android:text="Funkcja Kwadratowa"
            android:onClick="FunKwad"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnGeoAna"
            android:text="Geometria Analityczna"
            android:onClick="GeoAna"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnPlan"
            android:text="Planimetria"
            android:onClick="Plan"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnSter"
            android:text="Stereometria"
            android:onClick="Ster"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnTryg"
            android:text="Trygonometria"
            android:onClick="Tryg"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnKombi"
            android:text="Kombinatoryka"
            android:onClick="Kombi"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnRachPraw"
            android:text="Rachunek Prawdopodobieństwa"
            android:onClick="RachPraw"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnParDanStat"
            android:text="Parametry Danych Statystycznych"
            android:onClick="ParDanStat"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnGranCiag"
            android:text="Granica Ciagu"
            android:onClick="GranCiag"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnPochFun"
            android:text="Pochodna Funkcji"
            android:onClick="PochFun"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnTabWarTryg"
            android:text="Tablica Wartosci Funkcji Trygonometrycznych"
            android:layout_weight="0.14"
            android:onClick="TabWarFunTryg"/>


    </LinearLayout>
</ScrollView>
